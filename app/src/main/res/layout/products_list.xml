<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/margin_5dp"
    android:id="@+id/card_recy_products">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/margin_5dp">

    <ImageView
        android:layout_width="@dimen/dim_130"
        android:layout_height="@dimen/dim_130"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:layout_margin="@dimen/margin_10"
        android:id="@+id/listImage"
        android:contentDescription="@string/imagedes" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_10"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/margin_10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/productName"
            android:layout_margin="@dimen/margin_5dp"
            android:layout_gravity="center"
            style="@style/TextAppearance.MaterialComponents.Body1"
            tools:text="Eyeliner of the year dsfjdslkdjf nkdsjfjsndjksfn sdjfnkjsdnjkdsjk"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/brandName"
            android:layout_marginLeft="@dimen/margin_5dp"
            android:layout_marginRight="@dimen/margin_5dp"
            tools:text="By Sheir "/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/price"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_5dp"
                style="@style/TextAppearance.MaterialComponents.Body1"
                tools:text="$10.66"/>

            <ImageView
                android:layout_width="@dimen/dim_40"
                android:layout_height="@dimen/dp_30"
                android:id="@+id/have_this"
                android:layout_margin="@dimen/margin_10"
                app:srcCompat="@drawable/ic_have_yes"
                android:contentDescription="@string/imagedes"/>

            <ImageView
                android:layout_width="@dimen/dim_40"
                android:layout_height="@dimen/dp_30"
                android:id="@+id/want_this"
                android:layout_margin="@dimen/margin_10"
                app:srcCompat="@drawable/ic_want_cart"
                android:contentDescription="@string/imagedes"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>

</android.support.v7.widget.CardView>