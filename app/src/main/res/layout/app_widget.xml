<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiantbackground"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        style="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_margin="@dimen/margin_10"
        android:text="@string/app_name"/>
        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:background="@drawable/ic_want_cart"
            android:layout_margin="@dimen/margin_10"
            android:id="@+id/wantImage_widget"
            android:contentDescription="@string/widgetimagedes"/>
        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:background="@drawable/ic_have_yes"
            android:id="@+id/haveImage_widget"
            android:layout_margin="@dimen/margin_10"
            android:contentDescription="@string/widgetimagedes" />

</LinearLayout>