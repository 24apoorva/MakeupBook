<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
android:layout_height="@dimen/dp_200">

<ImageView
    android:id="@+id/itemImage_view"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:scaleType="fitCenter"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/margin_20"
    android:layout_marginRight="@dimen/margin_20"
    android:contentDescription="@string/imagedes"
    tools:src="@drawable/makeup_products" />

<android.support.design.widget.FloatingActionButton
    android:id="@+id/share_product_image"
    android:layout_width="@dimen/fabdimen"
    android:layout_height="@dimen/fabdimen"
    android:layout_alignEnd="@+id/itemImage_view"
    android:layout_alignParentBottom="true"
    android:layout_gravity="bottom|end"
    android:layout_marginBottom="@dimen/dim_15dp"
    android:contentDescription="@string/action_share"
    android:tint="@color/white"
    app:fabSize="normal"
    app:srcCompat="@drawable/ic_menu_share"
    android:layout_alignRight="@+id/itemImage_view" />
</RelativeLayout>