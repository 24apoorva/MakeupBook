<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/white"
tools:context=".savedlistsui.SavedListDetailsFragment">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/saved_linearlayout"
    android:orientation="vertical">

    <TextView
        android:id="@+id/savedName_text"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:background="@color/white"
        android:padding="@dimen/margin_5dp"
        android:textStyle="bold"
        tools:text="Liquid liner"
        android:layout_marginStart="@dimen/margin_10" />

    <TextView
        android:id="@+id/savedBrand_text"
        style="@style/TextAppearance.AppCompat.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:background="@color/white"
        android:padding="@dimen/margin_5dp"
        tools:text="By Lakme"
        android:layout_marginStart="@dimen/margin_10" />

    <include layout="@layout/image_with_sharefab"/>

    <TextView
        android:id="@+id/savedPrice_text"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:background="@color/white"
        android:padding="@dimen/margin_5dp"
        tools:text="$0.00"
        android:layout_marginStart="@dimen/margin_10" />

    <RatingBar
        android:id="@+id/savedRatingBar"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_5dp"
        android:isIndicator="true"
        android:numStars="5"
        android:rating="5"
        android:stepSize="1"
        android:layout_marginStart="@dimen/margin_10" />

    <TextView
        android:id="@+id/savedColor_Text"
        style="@style/TextAppearance.AppCompat.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:padding="@dimen/margin_5dp"
        android:textStyle="bold"
        tools:text="Color: White" />

    <View
        android:id="@+id/savedColor_grid"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        tools:background="@color/colorPrimary"
        android:paddingStart="@dimen/margin_5dp"
        android:paddingLeft="@dimen/margin_5dp"
        android:paddingRight="@dimen/margin_5dp"/>

    <TextView
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_10"
        android:text="@string/itemDescriptionText"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/saved_type_product"
        style="@style/TextAppearance.AppCompat.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_10"
        android:paddingTop="@dimen/margin_5dp"
        android:paddingRight="@dimen/margin_10"
        android:paddingBottom="@dimen/margin_5dp"
        tools:text="Category: Powder" />

    <TextView
        android:id="@+id/saved_description"
        style="@style/TextAppearance.AppCompat.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_10"
        android:paddingTop="@dimen/margin_5dp"
        android:paddingRight="@dimen/margin_10"
        android:paddingBottom="@dimen/margin_10" />

</LinearLayout>

</ScrollView>