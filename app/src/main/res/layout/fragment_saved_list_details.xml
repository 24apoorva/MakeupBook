<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/white"
tools:context=".savedlistsui.SavedListDetailsFragment">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/savedName_text"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:background="@color/white"
        android:padding="@dimen/margin_5dp"
        android:textStyle="bold"
        tools:text="Liquid liner" />

    <TextView
        android:id="@+id/savedBrand_text"
        style="@style/TextAppearance.AppCompat.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:background="@color/white"
        android:padding="@dimen/margin_5dp"
        tools:text="By Lakme" />

    <include layout="@layout/image_with_sharefab"/>

    <TextView
        android:id="@+id/savedPrice_text"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:background="@color/white"
        android:padding="@dimen/margin_5dp"
        tools:text="$0.00" />

    <RatingBar
        android:id="@+id/savedRatingBar"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_5dp"
        android:isIndicator="true"
        android:numStars="5"
        android:rating="5"
        android:stepSize="1"
        android:layout_marginStart="@dimen/margin_10" />

    <TextView
        android:id="@+id/savedColor_Text"
        style="@style/TextAppearance.AppCompat.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:padding="@dimen/margin_5dp"
        android:textStyle="bold"
        tools:text="Color: White" />

    <View
        android:id="@+id/savedColor_grid"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:paddingLeft="@dimen/margin_5dp"
        tools:background="@color/colorPrimary"/>

    <!--<Button-->
        <!--android:id="@+id/savedOther_button"-->
        <!--style="@style/Widget.AppCompat.Button.Small"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center"-->
        <!--android:layout_margin="@dimen/margin_5dp"-->
        <!--android:backgroundTint="@color/light_background"-->
        <!--android:text="See Other options"-->
        <!--android:textColor="@color/colorPrimary"-->
        <!--android:textStyle="bold" />-->

    <TextView
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_10"
        android:text="@string/itemDescriptionText"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/saved_type_product"
        style="@style/TextAppearance.AppCompat.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_10"
        android:paddingTop="@dimen/margin_5dp"
        android:paddingRight="@dimen/margin_10"
        android:paddingBottom="@dimen/margin_5dp"
        tools:text="Category: Powder" />

    <TextView
        android:id="@+id/saved_description"
        style="@style/TextAppearance.AppCompat.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_10"
        android:paddingTop="@dimen/margin_5dp"
        android:paddingRight="@dimen/margin_10"
        android:paddingBottom="@dimen/margin_10" />

</LinearLayout>

</ScrollView>