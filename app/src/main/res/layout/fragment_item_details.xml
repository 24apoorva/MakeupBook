<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.ItemDetailsFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/adv_frame"
            android:layout_alignParentTop="true"/>

        <ImageView
            android:id="@+id/itemImage_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerInside"
            tools:src="@drawable/image_makeup"
            android:layout_below="@id/adv_frame"
            android:contentDescription="@string/imagedes"/>

        <TextView
            android:id="@+id/itemName_text"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/itemImage_view"
            android:background="@color/white"
            android:padding="@dimen/margin_5dp"
            android:layout_marginTop="@dimen/margin_10"
            android:textStyle="bold"
            tools:text="Liquid liner" />

        <TextView
            android:id="@+id/itemBrand_text"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_below="@id/itemName_text"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/margin_5dp"
            tools:text="By rejebdn" />

        <TextView
            android:id="@+id/itemtype_text"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_below="@id/itemBrand_text"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/margin_5dp"
            tools:text="catogery" />

        <TextView
            android:id="@+id/itemprice_text"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/itemtype_text"
            android:background="@color/white"
            android:padding="@dimen/margin_5dp"
            tools:text="$0.0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rating_tv"
            android:layout_below="@id/itemprice_text"
            android:background="@color/white"
            android:padding="@dimen/margin_5dp"
            tools:text="rating"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buy_button"
            android:text="@string/buyNow"
            android:layout_below="@id/rating_tv"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_alignParentLeft="true"
            android:padding="@dimen/margin_10"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/white"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/color_image"
            android:layout_below="@+id/itemImage_view"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/square"
            android:layout_alignParentRight="true" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/color_image"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:id="@+id/color_spinner"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_10" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iHave_button"
            style="@style/Widget.AppCompat.Button.Small"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:text="@string/haveButton_title"
            android:layout_below="@id/color_spinner"
            android:layout_alignParentEnd="true"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/margin_10" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iWant_button"
            style="@style/Widget.AppCompat.Button.Small"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:text="@string/wantButton_title"
            android:layout_below="@id/iHave_button"
            android:layout_alignParentEnd="true"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/margin_10" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/item_des_tv"
            android:layout_below="@+id/buy_button"
            android:background="@drawable/border"
            android:text="@string/itemDescriptionText"
            android:layout_marginTop="@dimen/margin_5dp"
            android:padding="@dimen/margin_5dp"
            style="@style/TextAppearance.AppCompat.Body1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/description_item_textview"
            android:layout_below="@+id/item_des_tv"
            style="@style/TextAppearance.AppCompat.Small"
            android:padding="@dimen/margin_5dp"
            />

    </RelativeLayout>
</ScrollView>